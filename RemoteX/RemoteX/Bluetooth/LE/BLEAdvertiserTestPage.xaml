<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemoteX.Bluetooth.LE.BLEAdvertiserTestPage">
    <ContentPage.Content>
        <StackLayout>
            <Slider x:Name="NotifyTestSlider"
                    Maximum="100"
                    Minimum="0"
                    ValueChanged="NotifyTestSlider_ValueChanged"/>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="SendNotifyButton"
                    Text="Send Notify"
                    Clicked="SendNotifyButton_Clicked"/>
            <Button x:Name="StartAdvertisingButton"
                    Text="Start Advertising"
                    Clicked="StartAdvertisingButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>